<?xml version="1.0" encoding="UTF-8" ?>
<schemalist>
  <schema
    id="org.gnome.shell.extensions.com.github.kyleabaker.gnome-magic-lamp"
    path="/org/gnome/shell/extensions/com/github/kyleabaker/gnome-magic-lamp/"
  >
    <key type="s" name="effect">
      <default>"default"</default>
      <summary>Effect</summary>
      <description />
    </key>

    <key type="d" name="duration">
      <default>400</default>
      <summary>Duration</summary>
      <description />
    </key>

    <key type="b" name="ease-out">
      <default>false</default>
      <summary>Ease Out</summary>
      <description>
        Enable East Out behavior for smoother effect animation.
      </description>
    </key>

    <key type="d" name="x-tiles">
      <default>20.0</default>
      <summary>X Tiles</summary>
      <description />
    </key>

    <key type="d" name="y-tiles">
      <default>20.0</default>
      <summary>Y Tiles</summary>
      <description />
    </key>

    <key type="b" name="enable-logging">
      <default>false</default>
      <summary>Enable Logging</summary>
      <description>Enable logging for debugging.</description>
    </key>
  </schema>
</schemalist>
